{
  "name": "electron-pixel-pet",
  "version": "1.0.0",
  "private": true,
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "ts-node-esm ./scripts/dev-electron.ts",
    "build": "rimraf dist dist-electron && vite build && ts-node-esm ./scripts/build-electron.ts",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron-store": "^9.0.0",
    "phaser": "^3.80.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vite": "^5.1.0"
  },
  "build": {
    "appId": "com.yourstudio.pixelpet",
    "productName": "Pixel Pet RPG",
    "files": [
      "dist/**",
      "dist-electron/**",
      "node_modules/**",
      "package.json"
    ],
    "mac": { "category": "public.app-category.games" },
    "win": { "target": "nsis", "icon": "electron/icon.png" },
    "linux": { "target": "AppImage" }
  }
}
